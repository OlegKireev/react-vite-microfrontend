{
  "name": "react-vite",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm --parallel --filter \"./**\" build",
    "serve": "pnpm --parallel --filter \"./**\" preview",
    "preview": "pnpm build && pnpm serve",
    "build:remotes": "pnpm --parallel --filter \"./homepage\" \"./about\" build",
    "serve:remotes": "pnpm --parallel --filter \"./homepage\" \"./about\" serve",
    "dev:root": "pnpm --filter \"./root\" dev",
    "dev": "pnpm dev:root",
    "stop": "kill-port 5000 5001 5002"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "@originjs/vite-plugin-federation": "^1.2.3"
  }
}
